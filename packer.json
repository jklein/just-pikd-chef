{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-dc5387b4",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-example {{timestamp}}"
  }],

  "provisioners": [{
    "type": "chef-solo",
    "cookbook_paths": ["cookbooks"],
    "roles_path": "roles",
    "run_list": [ "role[web]" ]
  }],

  "post-processors": ["vagrant"]
}
